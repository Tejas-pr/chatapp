{
  "name": "drawing-app",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "dotenv -- turbo dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",

    "db:migrate:dev": "turbo run migrate:dev --filter=@repo/database",
    "db:migrate:deploy": "turbo run migrate:deploy --filter=@repo/database",
    "db:push": "turbo run db:push --filter=@repo/database",
    "db:reset": "turbo run db:reset --filter=@repo/database",
    "db:generate": "turbo run generate --filter=@repo/database",
    "db:studio": "turbo run studio --filter=@repo/database"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.8.3",
    "dotenv-cli": "^10.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "better-auth": "^1.3.8"
  }
}